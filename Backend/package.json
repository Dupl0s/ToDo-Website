{
  "name": "todo-backend",
  "version": "1.0.50",
  "scripts": {
    "test": "vitest --ui",
    "test:once": "vitest run",
    "dev": "nodemon --watch src --ext ts --exec \"tsc && node dist/index.js\"",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@vercel/node": "^5.3.3",
    "@vercel/postgres": "^0.10.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "drizzle-orm": "^0.44.2",
    "express": "latest",
    "pg": "^8.16.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "latest",
    "@types/node": "^24.0.10",
    "@types/pg": "^8.15.4",
    "@vitest/ui": "latest",
    "drizzle-kit": "^0.31.4",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "nodemon": "latest",
    "prettier": "latest",
    "tsx": "^4.20.3",
    "typescript": "latest",
    "typescript-eslint": "latest",
    "vitest": "latest"
  }
}
